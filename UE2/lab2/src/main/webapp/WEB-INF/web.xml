<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>at.ac.tuwien.big.we16.ue2.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Details</servlet-name>
        <servlet-class>at.ac.tuwien.big.we16.ue2.controller.DetailsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Details</servlet-name>
        <url-pattern>/DetailsServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>at.ac.tuwien.big.we16.ue2.controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Bid</servlet-name>
        <servlet-class>at.ac.tuwien.big.we16.ue2.controller.BidServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Bid</servlet-name>
        <url-pattern>/BidServlet</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>views/login.jsp</welcome-file>
    </welcome-file-list>
</web-app>